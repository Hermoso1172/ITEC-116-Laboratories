generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int       @id @default(autoincrement())
  username   String    @unique
  email      String    @unique
  password   String
  resetToken String?
  folders    Folders[]
}

model Folders {
  id     Int     @id @default(autoincrement())
  userId Int
  name   String
  color  Colors
  notes  Notes[]
  user   Users   @relation(fields: [userId], references: [id])
}

model Notes {
  id        Int      @id @default(autoincrement())
  folderId  Int
  title     String
  content   String
  createdAt DateTime @default(now())
  folders   Folders  @relation(fields: [folderId], references: [id], onDelete: Cascade)
}

enum Colors {
  RED
  ORANGE
  YELLOW
  GREEN
  BLUE
  CYAN
  PINK
}
